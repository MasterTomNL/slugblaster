<section class="slugblasterFame">
  <ul>
    {{#each fame as |f key|}}
    <li class="fameRow">
      <div class="fameName" title="{{ f.desc }}">
        <input type="radio" name="system.fame_level" value="{{ key }}" {{checked (eq key ../actor.system.fame_level) }}>
        {{ key }}: {{ f.name }} {{#if f.cost }}({{ f.cost }} style){{/if}}
      </div>
      {{#each f.perks as |p key|}}
      <div class="perk">
        <div class="perkName" title="{{ p.desc }}">{{ p.name }} <span="perkCost">({{ p.cost }} style)</span></div>
      </div>
      {{/each}}
    </li>
  {{/each}}
  </ul>
</section>
