<div class="slugblaster-signature-block">
  {{#each signatures as |item key|}}
  <section>
    <div class="signatureDetails flexrow">
      <img class="signatureImg itemImg flex0" src="{{item.img}}" data-item-id="{{ item._id }}" />
      <li data-item-id="{{item._id}}">
        <div class="signature-details">
          <h2>
            {{item.name}}
            <i class="fas fa-trash delete" title="{{ localize 'SB.delete' }}" data-item-id="{{ item._id }}""></i>
          </h2>
          <p>{{item.system.description}}</p>
          <input type="text" data-name="system.look" value="{{item.system.look}}" placeholder="{{ localize 'SB.ph_sigMod_look' }}" />
        </div>
      </li>
    </div>
  </section>
  <section class="signatureTurbo">
    <h3>Turbo ({{item.system.boosts}} / {{item.system.kicks}})</h3>
    <div class="flexrow">
      <div class="sbResources" data-value="{{item.system.boosts}}" data-key="boosts" data-item-id="{{item._id}}">
        {{#numLoop 5}}
          <i class="icon icon-boost" data-index="{{this}}"></i>
        {{/numLoop}}
      </div>
      <div class="sbResources" data-value="{{item.system.kicks}}" data-key="kicks" data-item-id="{{item._id}}">
        {{#numLoop 5}}
          <i class="icon icon-kick" data-index="{{this}}"></i>
        {{/numLoop}}
      </div>
    </div>
  </section>
  <section class="signatureMods">
    <h3>{{ localize 'SB.signatureMods' }}</h3>
    <ul>
      {{#each item.mods as |mod key|}}
      <li class="list-item sigMod {{ isUnlocked mod.system.active }}" data-item-id="{{mod._id}}">
        <span class="name">{{mod.name}}</span>
        
        {{#unless mod.system.active }}
        <i class="fas fa-download install" title="{{ localize 'SB.install' }}"></i>
        {{/unless }}
        
        {{#unless (not mod.system.active) }}
        <i class="fas fa-recycle salvage" title="{{ localize 'SB.salvage' }}"></i>
        {{/unless}}
        
        <span>(</span>
        <span class="{{ hideIfZero mod.system.coilCost 0 0 0 }}">
          <span>{{mod.system.coilCost}}</span>
          <i class="icon icon-coil" title="{{ localize 'SB.coils' }}"></i>
        </span>
        <span class="{{ hideIfZero mod.system.discCost 0 0 0 }}">
          <span>{{mod.system.discCost}}</span>
          <i class="icon icon-disc" title="{{ localize 'SB.discs' }}"></i>
        </span>
        <span class="{{ hideIfZero mod.system.gemCost 0 0 0 }}">
          <span>{{mod.system.gemCost}}</span>
          <i class="icon icon-gem" title="{{ localize 'SB.gems' }}"></i>
        </span>
        <span class="{{ hideIfZero mod.system.lensCost 0 0 0 }}">
          <span>{{mod.system.lensCost}}</span>
          <i class="icon icon-lens" title="{{ localize 'SB.lenses' }}"></i>
        </span>
        <span>)</span>
        
        <i class="fas fa-trash delete" title="{{ localize 'SB.delete' }}" data-item-id="{{ mod._id }}"></i>
        
        <p class="desc">{{mod.system.description}}</p>
      </li>
      {{/each}}
    </ul>
  </section>
  {{/each}}
</div>