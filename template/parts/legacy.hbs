<section class="slugblasterSlam">
  <h2>
    <a class="addBtn" data-type="slam" title="{{ localize 'Slugblaster.Add' }}" data-system-type="slam">
      {{ localize 'Slugblaster.Actor.LegacyDoomSlam.Slam' }}
      <i class="item-control fas fa-plus"></i>
    </a>
  </h2>
  <ul>
    {{#each slams as |item key|}}
    <li class="itemRow valChangeParent" data-item-id="{{item._id}}" data-type="slam">
      <input type="text" data-name="name" class="valChange" value="{{item.name}}" placeholder="{{ localize 'Slugblaster.Actor.LegacyDoomSlam.SlamPlaceholder' }}"/>
      <a class="delete flex0" title="{{ localize 'Slugblaster.Delete' }}" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>

    </li>
    {{/each}}
  </ul>
</section>
