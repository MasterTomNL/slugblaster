<form class="slugblasterSignatureSheet {{cssClass}}" autocomplete="off">
  <section>
    <div>
      <label for="name">{{ localize 'SB.name' }}</label>
      <input id="name" name="name" type="text" value="{{actor.name}}" class="sb-name-input" placeholder="{{ localize 'SB.name_placeholder'}}" />
    </div>
    
    <div>
      <label for="description">{{ localize 'SB.description' }}</label>
      <textarea id="boosts" name="system.description" placeholder="{{ localize 'SB.signatureDesc_placeholder'}}">{{actor.system.description}}</textarea>
    </div>
    
    <div>
      <label for="effect">{{ localize 'SB.effect' }}</label>
      <textarea id="effect" name="system.effect" placeholder="{{ localize 'SB.effect_placeholder'}}">{{actor.system.effect}}</textarea>
    </div>
    
    <div>
      <label for="look">{{ localize 'SB.look' }}</label>
      <input id="look" name="system.look" type="text" value="{{actor.system.look}}" placeholder="{{ localize 'SB.ph_sigMod_look'}}" />
    </div>
  </section>
  <section>
    <h3>{{ localize 'SB.turbo' }}</h3>
    <div class="flexrow">
      <div>
        <label for="boosts">{{ localize 'SB.boosts' }}</label>
        <input id="boosts" name="system.boosts" type="number" value="{{actor.system.boosts}}" placeholder="{{ localize 'SB.boosts_placeholder'}}" />
      </div>
      <div>
        <label for="kicks">{{ localize 'SB.kicks' }}</label>
        <input id="kicks" name="system.kicks" type="number" value="{{actor.system.kicks}}" placeholder="{{ localize 'SB.kicks_placeholder'}}" />
      </div>
    </div>
  </section>
  <section>
    <h3>{{ localize 'SB.signatureMods' }}
      <a class="addBtn" title="{{ localize 'SB.addSignatureMod' }}" data-type="signatureMod"><i class="item-control fas fa-plus"></i></a>
    </h3>
    <ul>
      {{#each items as |item tId|}}
      <li class="sigMod flexrow" data-item-id="{{item._id}}" data-type="signatureMod">
        <input data-name="name" class="valChange" type="text" value="{{item.name}}" placeholder="{{ localize 'SB.newSignatureMod' }}" />
        <div class="cost flex0">
          <input data-name="system.coilCost" class="valChange" type="number" value="{{item.system.coilCost}}" placeholder="{{ localize 'SB.newSignatureModCost' }}" title="{{ localize 'SB.coils' }}" />
          <i class="icon icon-coil" title="{{ localize 'SB.coils' }}"></i>
        </div>
        <div class="cost flex0">
          <input data-name="system.discCost" class="valChange" type="number" value="{{item.system.discCost}}" placeholder="{{ localize 'SB.newSignatureModCost' }}" title="{{ localize 'SB.discs' }}" />
          <i class="icon icon-disc" title="{{ localize 'SB.discs' }}"></i>
        </div>
        <div class="cost flex0">
          <input data-name="system.gemCost" class="valChange" type="number" value="{{item.system.gemCost}}" placeholder="{{ localize 'SB.newSignatureModCost' }}" title="{{ localize 'SB.gems' }}" />
          <i class="icon icon-gem" title="{{ localize 'SB.gems' }}"></i>
        </div>
        <div class="cost flex0">
          <input data-name="system.lensCost" class="valChange" type="number" value="{{item.system.lensCost}}" placeholder="{{ localize 'SB.newSignatureModCost' }}" title="{{ localize 'SB.lenses' }}" />
          <i class="icon icon-lens" title="{{ localize 'SB.lenses' }}"></i>
        </div>
        
        <input data-name="system.description" class="valChange flex3" type="text" value="{{item.system.description}}" placeholder="{{ localize 'SB.newSignatureModDesc' }}" />
        <a class="delete flex0" title="{{ localize 'SB.delete' }}">
          <i class="fas fa-trash"></i>
        </a>
      </li>
      {{/each}}
    </ul>
  </section>
</form>