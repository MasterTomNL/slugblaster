<form class="slugblaster-playbook-sheet {{cssClass}}" autocomplete="off">
  <section>
    <div>
      <label for="name">{{ localize 'SB.name' }}</label>
      <input id="name" name="name" type="text" value="{{actor.name}}" class="sb-name-input" placeholder="{{ localize 'SB.name_placeholder'}}" />
    </div>
    
    <div>
      <label for="boosts">{{ localize 'SB.boosts' }}</label>
      <input id="boosts" name="system.boosts" type="number" value="{{actor.system.boosts}}" placeholder="{{ localize 'SB.boosts_placeholder'}}" />
    </div>
    
    <div>
      <label for="kicks">{{ localize 'SB.kicks' }}</label>
      <input id="kicks" name="system.kicks" type="number" value="{{actor.system.kicks}}" placeholder="{{ localize 'SB.kicks_placeholder'}}" />
    </div>
    
    <div>
      <label for="styleBonus">{{ localize 'SB.styleBonus' }}</label>
      <input id="styleBonus" name="system.styleBonus" type="text" value="{{actor.system.styleBonus}}" placeholder="{{ localize 'SB.styleBonus_placeholder'}}" />
    </div>
    
    <div>
      <label for="specialGear">{{ localize 'SB.specialGear' }}</label>
      <input id="specialGear" name="system.specialGear" type="text" value="{{actor.system.specialGear}}" placeholder="{{ localize 'SB.specialGear_placeholder'}}" />
    </div>
    
    <div>
      <label for="attitude">{{ localize 'SB.attitude' }}</label>
      <textarea id="attitude" name="system.attitude" placeholder="{{ localize 'SB.attitude_placeholder'}}">{{actor.system.attitude}}</textarea>
    </div>
  </section>
  <section>
    <h3>{{ localize 'SB.traits' }}
      <a class="addBtn" title="{{ localize 'SB.addTrait' }}" data-type="trait"><i class="item-control fas fa-plus"></i></a>
    </h3>
    <ul>
      <li class="flexrow">
        <label>{{ localize 'SB.name' }}</label>
        <label class="flex3">{{ localize 'SB.description' }}</label>
        <div class="flex0"></div>
      </li>
      
      {{#each playbookBeats as |beat tId|}}
      <li class="list-item traits flexrow" data-item-id="{{beat._id}}" data-type="playbookBeat">
        <input data-name="name" class="valChange" type="text" value="{{beat.name}}" placeholder="{{ localize 'SB.newTrait' }}" />
        <input data-name="system.description" class="valChange flex3" type="text" value="{{beat.system.description}}" placeholder="{{ localize 'SB.newTraitDesc' }}" />
        <a class="delete flex0" title="{{ localize 'SB.delete' }}">
          <i class="fas fa-trash"></i>
        </a>
      </li>
      {{/each}}
      <li><h3>{{ localize 'SB.specialTrait' }}</h3></li>
      <li class="list-item traits flexrow">
        <input name="system.specialTraitName" type="text" value="{{actor.system.specialTraitName}}" placeholder="{{ localize 'SB.ph_specialTraitName' }}" />
        <input name="system.specialTraitDesc" class="flex3" type="text" value="{{actor.system.specialTraitDesc}}" placeholder="{{ localize 'SB.ph_specialTraitDesc' }}" />
      </li>
    </ul>
  </section>
    
  <section>
    <h3>
      {{ localize 'SB.traitBeats' }}
      <a class="addBtn" title="{{ localize 'SB.addBeat' }}" data-type="beat" data-system-type="trait"><i class="item-control fas fa-plus"></i></a>
    </h3>
    <ul class="playbook-beat">
      <li class="flexrow">
        <label class="flex2">{{ localize 'SB.name' }}</label>
        <label class="al-c">{{ localize 'SB.trouble' }}</label>
        <label class="al-c">{{ localize 'SB.style' }}</label>
        <label class="flex2">{{ localize 'SB.reward' }}</label>
        <div class="flex0"></div>
      </li>
        
      {{#each traitBeats as |beat bId|}}
      <li class="beatRow" data-item-id="{{beat._id}}">
        <div class="flexrow">
          <input data-name="name" class="valChange beatName flex2" type="text" value="{{beat.name}}" />
          <input data-name="system.troubleCost" class="valChange al-c" type="text" value="{{beat.system.troubleCost}}" />
          <input data-name="system.styleCost" class="valChange al-c" type="text" value="{{beat.system.styleCost}}" />
          <input data-name="system.reward" class="valChange flex2" type="text" value="{{beat.system.reward}}" placeholder="{{ localize 'SB.newBeatReward' }}" />
          <a class="delete flex0" title="{{ localize 'SB.delete' }}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ul>
  </section>
  
  {{> "systems/slugblaster/template/parts/beatsPlaybook.hbs" beatName="arcBeat" beats=arcBeats}}
  
  {{> "systems/slugblaster/template/parts/beatsPlaybook.hbs" beatName="familyBeat" beats=familyBeats}}

  {{> "systems/slugblaster/template/parts/beatsPlaybook.hbs" beatName="angstBeat" beats=angstBeats}}

  {{> "systems/slugblaster/template/parts/beatsPlaybook.hbs" beatName="crewBeat" beats=crewBeats}}

  {{> "systems/slugblaster/template/parts/beatsPlaybook.hbs" beatName="otherBeat" beats=otherBeats}}

</form>